<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <xacro:macro name="rot_x_origin">
        <origin rpy="0 ${pi/2} 0"/>
    </xacro:macro>

    <xacro:macro name="rot_y_origin">
        <origin rpy="0 ${pi/2} ${pi/2}"/>
    </xacro:macro>


    <!-- Links-->>
    <xacro:macro name="rot_link" params="prefix rho r l *rot_origin *material">
        <link name="${prefix}_link">
            <xacro:solid_cylinder_inertial rho="${rho}" r="${r}" l="${l}"/>
            <visual>
                <geometry>
                    <cylinder length="${l}" radius="${r}"/>
                </geometry>
                <xacro:insert_block name="rot_origin"/>
                <xacro:insert_block name="material"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder length="${l}" radius="${r}"/>
                </geometry>
                <xacro:insert_block name="rot_origin"/>
            </collision>
        </link>
    </xacro:macro>

    <xacro:macro name="cuboid_link" params="prefix rho w d h *material">
        <link name="${prefix}_link">
            <xacro:solid_cuboid_inertial rho="${rho}" w="${w}" d="${d}" h="${h}"/>
            <visual>
                <geometry>
                    <box size="${w} ${d} ${h}"/>
                </geometry>
                <xacro:insert_block name="material"/>
            </visual>
            <collision>
                <geometry>
                    <box size="${w} ${d} ${h}"/>
                </geometry>
            </collision>
        </link>
    </xacro:macro>


    <!-- Joints-->>
    <xacro:macro name="default_rot_joint" params="parent child *origin *axis">
        <joint name="${parent}_${child}_joint" type="revolute">
            <parent link="${parent}_link"/>
            <child link="${child}_link"/>
            <xacro:insert_block name="origin"/>
            <xacro:insert_block name="axis"/>
            <limit upper="${pi/2}" lower="-${pi/2}" effort="${default_effort}" velocity="${default_velocity}"/>
            <dynamics damping="${default_damping}"/>
        </joint>
    </xacro:macro>

    <xacro:macro name="default_fixed_joint" params="parent child *origin">
        <joint name="${parent}_${child}_joint" type="fixed">
            <parent link="${parent}_link"/>
            <child link="${child}_link"/>
            <xacro:insert_block name="origin"/>
        </joint>
    </xacro:macro>

    <!-- Transmissions-->>
     <xacro:macro name="joint_trans" params="parent child">
        <transmission name="${parent}_${child}_trans">
            <type>EffortJointInterface</type>
            <actuator name="${parent}_${child}_joint_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="${parent}_${child}_joint">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
        </transmission>
    </xacro:macro>


    <!-- Gazebo-->>
    <xacro:macro name="gazebo_ref" params="prefix material">
        <gazebo reference="${prefix}_link">
            <material>${material}</material>
            <mu1>${default_mu1}</mu1>
            <mu2>${default_mu2}</mu2>
        </gazebo>
    </xacro:macro>


</robot>